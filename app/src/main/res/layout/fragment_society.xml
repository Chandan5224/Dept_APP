<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SocietyFragment">

    <TextView
        android:id="@+id/acm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="SOCIETY"
        android:textColor="@color/main_color"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSliderSocietyFrag"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/white"
                app:iss_auto_cycle="true"
                app:iss_corner_radius="5"
                app:iss_delay="0"
                app:iss_error_image="@android:color/darker_gray"
                app:iss_period="2000"
                app:iss_placeholder="@android:color/darker_gray"
                app:iss_selected_dot="@drawable/default_selected_dot"
                app:iss_text_align=""
                app:iss_unselected_dot="@drawable/default_unselected_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:fontFamily="serif"
                android:justificationMode="inter_word"
                android:gravity="fill_vertical|fill_horizontal"
                android:text="@string/ACMDescription"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Recent Activities"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBtnSocEventViewMore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="SHOW MORE"
                    android:textColor="@color/purple_500"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llEvent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSocEvent1"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/acm_img1" />

                <TextView
                    android:id="@+id/tvSocEventTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="February 22, 2023"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSocEventTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:text="Networking opportunities in ACM’s 38 Special Interest Groups (SIGs) are always expanding, reflecting the growth of computing’s discrete disciplines and technical communities. The leading representatives of their fields, ACM SIGs sponsor annual conferences, workshops, and symposia serving practitioner‐ and research‐based constituencies. Because they provide objective arenas for novel, often competing ideas, "
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEvent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F3F3F3"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSocEvent2"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/acm_img1" />

                <TextView
                    android:id="@+id/tvSocEventTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="February 22, 2023"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSocEventTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Networking opportunities in ACM’s 38 Special Interest Groups (SIGs) are always expanding, reflecting the growth of computing’s discrete disciplines and technical communities. The leading representatives of their fields, ACM SIGs sponsor annual conferences, workshops, and symposia serving practitioner‐ and research‐based constituencies. Because they provide objective arenas for novel, often competing ideas, "
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEvent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#F3F3F3"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSocEvent3"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/acm_img1" />

                <TextView
                    android:id="@+id/tvSocEventTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="February 22, 2023"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSocEventTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:text="Networking opportunities in ACM’s 38 Special Interest Groups (SIGs) are always expanding, reflecting the growth of computing’s discrete disciplines and technical communities. The leading representatives of their fields, ACM SIGs sponsor annual conferences, workshops, and symposia serving practitioner‐ and research‐based constituencies. Because they provide objective arenas for novel, often competing ideas, "
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>